<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kashish.ams" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/enlarged"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseActivity" >
        </activity>
        <activity
            android:name=".StudentLogIn"
            android:label="Student Login" >
        </activity>
        <activity
            android:name=".TeacherLogIn"
            android:label="Teacher Login" >
        </activity>
        <activity
            android:name=".StudentAttendanceChoose"
            android:label="Student" >
        </activity>
        <activity
            android:name=".TeacherAttendanceChoose"
            android:label="Teacher" >
        </activity>
        <activity android:name=".StudentMarkAttendance" >
        </activity>
        <activity android:name=".SubjectChoose" >
        </activity>
        <activity android:name=".StudentPieChart" >
        </activity>
        <activity android:name=".TeacherPieChart" >
        </activity>
        <activity android:name=".ClassAttendanceChoose" >
        </activity>
        <activity android:name=".ClassPieChart" >
        </activity>
        <activity android:name=".ContactAdmin"
            android:label="Contact Admin" >
        </activity>
    </application>

</manifest>
