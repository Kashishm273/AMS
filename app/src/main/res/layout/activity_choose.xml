<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A0CFEC"
    tools:context="com.example.kashish.ams.ChooseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME!"
        android:textColor="#000000"
        android:id="@+id/txtwelcome"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the account type"
        android:id="@+id/txtcontinueas"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Student"
        android:id="@+id/btnstudent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtcontinueas"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:id="@+id/btnteacher"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnstudent"
        android:layout_centerHorizontal="true"
       />

</RelativeLayout>
