<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A0CFEC"
    tools:context="com.example.kashish.ams.StudentLogIn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:textStyle="bold"
        android:id="@+id/txtlogin1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Don't have an account?"
        android:id="@+id/txtsignup11"
        android:layout_below="@id/txtlogin1"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contact Admin"
        android:id="@+id/txtsignup12"
        android:textColor="#0000FF"
        android:layout_alignTop="@+id/txtsignup11"
        android:layout_toRightOf="@+id/txtsignup11"
        android:layout_toEndOf="@+id/txtsignup11"
        android:layout_marginLeft="10dp"
        android:clickable="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxtemailid"
        android:hint="Enter your email id"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/txtsignup11"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxtpassword1"
        android:fontFamily="sans-serif"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:layout_below="@+id/etxtemailid"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot password?"
        android:id="@+id/txtforgot"
        android:layout_below="@+id/etxtpassword1"
        android:layout_alignParentRight="true"
        android:textColor="#0000FF"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin1"
        android:layout_below="@id/txtforgot"
        android:layout_marginTop="20dp"/>




</RelativeLayout>
