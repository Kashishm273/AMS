<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A0CFEC"
    tools:context="com.example.kashish.ams.TeacherAttendanceChoose">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What do you want to do?"
        android:id="@+id/txtdo2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mark Attendance"
        android:id="@+id/btnmark2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/txtdo2"
        android:layout_alignLeft="@+id/btnview2"
        android:layout_alignStart="@+id/btnview2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View your Attendance"
        android:id="@+id/btnview2"
        android:layout_below="@+id/btnmark2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Class Attendance"
        android:id="@+id/btnview3"
        android:layout_below="@+id/btnview2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
